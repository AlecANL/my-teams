---
import { ContactSection } from '../components/contact-section/contact-section'
import { Footer } from '../components/footer/footer'
import '../styles/globals.css'
import '../styles/icons.css'

const { title } = Astro.props
---

<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='icon' type='image/svg+xml' href='/assets/favicon-32x32.png' />
    <meta name='generator' content={Astro.generator} />

    <link rel='preconnect' href='https://fonts.googleapis.com' /><link rel='preconnect' href='https://fonts.gstatic.com' crossorigin /><link
      href='https://fonts.googleapis.com/css2?family=Livvic:wght@600;700&display=swap'
      rel='stylesheet'
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <ContactSection />
    <Footer />
  </body>
</html>
